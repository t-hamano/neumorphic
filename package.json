{
	"name": "neumorphic",
	"version": "1.3.2",
	"author": "Tetsuaki Hamano",
	"license": "GPL-2.0+",
	"scripts": {
		"wp-env": "wp-env",
		"open": "wp-env start && opener http://localhost:8888",
		"stop": "wp-env stop",
		"start": "chokidar \"assets/sass/\" -c \"npm-run-all -s css:clean css:expanded:* css:rename\" --initial",
		"build": "npm-run-all -s css:clean css:compressed:* css:rename css:expanded:*",
		"css:expanded:style": "sass assets/sass/style.scss:assets/css/style.css --style=expanded",
		"css:expanded:block": "sass assets/sass/editor-style-block.scss:assets/css/editor-style-block.css --style=expanded",
		"css:expanded:classic": "sass assets/sass/editor-style-classic.scss:assets/css/editor-style-classic.css --style=expanded",
		"css:compressed:style": "sass assets/sass/style.scss:assets/css/style.css --style=compressed --no-source-map",
		"css:compressed:block": "sass assets/sass/editor-style-block.scss:assets/css/editor-style-block.css --style=compressed --no-source-map",
		"css:compressed:classic": "sass assets/sass/editor-style-classic.scss:assets/css/editor-style-classic.css --style=compressed --no-source-map",
		"css:rename": "renamer -f \"/.css$/\" -r \".min.css\" \"assets/css/*\"",
		"css:clean": "rimraf assets/css",
		"release": "npm-run-all -s release:clean:dir release:clean:zip release:mkdir release:copy release:archive release:clean:dir",
		"release:clean:dir": "cross-conf-env rimraf ./npm_package_name",
		"release:clean:zip": "rimraf ./*.zip",
		"release:copy": "cross-conf-env copyfiles -e \"./node_modules/**/*\" -e \"./vendor/**/*\" -e \"./*.json\" -e \"./*.xml\" -e \"./*.lock\" -e \"./*.zip\" ./**/* ./npm_package_name",
		"release:mkdir": "cross-conf-env mkdirp npm_package_name",
		"release:archive": "cross-conf-env bestzip ./npm_package_name-npm_package_version.zip ./npm_package_name"
	},
	"devDependencies": {
		"@wordpress/env": "^4.1.0",
		"@wordpress/eslint-plugin": "^9.1.0",
		"@wordpress/stylelint-config": "^19.1.0",
		"bestzip": "^2.2.0",
		"chokidar-cli": "^3.0.0",
		"copyfiles": "^2.4.1",
		"cross-conf-env": "^1.2.1",
		"eslint": "^7.32.0",
		"mkdirp": "^1.0.4",
		"npm-run-all": "^4.1.5",
		"opener": "^1.5.2",
		"renamer": "^3.2.1",
		"rimraf": "^3.0.2",
		"sass": "^1.38.2",
		"stylelint": "^13.13.1",
		"stylelint-config-rational-order": "^0.1.2",
		"stylelint-config-recommended-scss": "^4.3.0"
	}
}
